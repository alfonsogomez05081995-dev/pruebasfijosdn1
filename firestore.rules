rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer perfiles de usuario
      allow read: if request.auth != null;
      // Solo el propio usuario puede modificar su perfil
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para activos (assets)
    match /assets/{assetId} {
      allow read: if request.auth != null;
      // Solo el rol 'master' puede crear/modificar activos
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'master';
    }

    // Cualquier otra colección solo es accesible por usuarios autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
